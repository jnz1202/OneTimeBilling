	var user= new GlideRecord('sys_user');
	user.addQuery('user_name', current.sys_created_by);
	user.query();
	if (user.next()){
		
		uEmail= user.email;
	}
	if (current.change_poc ==true){
		gs.eventQueue("x_nios2_onetimebil.one_time_bill.disapproved", current, uEmail, uEmail);
	}
