        <script><![CDATA[(function executeRule(current, previous) {
	//Sets default FY to current
	if (current.isNewRecord()){
		var gDate = new GlideDateTime().getDisplayValue();
	var gDT = new GlideDateTime(gDate);
	var year=gDT.getYearUTC();
	var month=gDT.getMonthUTC();
	var fisicalYear;
	if (month>9){
		fisicalYear = year+1;
	}
	else
			fisicalYear=year;
		
	//	gs.info('new record: ' + fisicalYear);
		var gr = new GlideRecord('u_fiscal_year');
		gr.addQuery('u_fiscal_year', fisicalYear.toString());		
		gr.query();
		if (gr.next())
			{
				var currentFy = gr.getValue('u_fiscal_year');
				//gs.info('current fy: ', gr.getValue('u_fiscal_year') );
			current.setValue('u_fy', gr.sys_id);
		}}
		
	})(current, previous);]]></script>
