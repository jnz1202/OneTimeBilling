	att.addQuery("table_sys_id", current.sys_id);
	att.query();
	var number = att.getRowCount();
	if(number > 1){	
		gs.addErrorMessage("Please attache only one Work Order file at a time."); 
		current.setAbortAction(true);
	}
	else if (number == 1){
		att.next();
		var format = att.content_type.toString();
		if(format != 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'){ //not Excel file
			gs.addErrorMessage("The upload file must be EXCEL file");
			current.setAbortAction(true);
		}
		else {
			current.status = 'pending';
			current.update();
			gs.addInfoMessage("This record has been saved");
			action.setRedirectURL(current);
			current.setWorkflow(false);
		}
	}
