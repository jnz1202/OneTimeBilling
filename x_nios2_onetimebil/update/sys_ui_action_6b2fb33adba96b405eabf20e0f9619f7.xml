	setStaus();

function setStaus(){
	//gs.info('Jingping disapprove');
	//check comment field
	var dReason;
	//gs.info('in disapproved');
	dReason = current.u_disapproval_reason;	
	
	if (dReason == ''){
		gs.addInfoMessage('You need to enter the disapproval reason to disapprove the bill.');
		current.setAbortAction(true);
	}
	else{
	//after validate set status to Disapproved
	current.u_status = 'Disapproved';	
	current.update();
	action.setRedirectURL(current);	

}
